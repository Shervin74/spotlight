<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shervin.designtest.Fragment.BookmarkFragment">

    <!-- TODO: Update blank fragment layout -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shervin.designtest.MainMapActivity" />

    <Button
        android:id="@+id/typeOne"
        android:layout_marginStart="10dp"
        android:text="@string/_1"
        android:backgroundTint="#ffc107"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:layout_marginTop="320dp"
        android:textSize="25sp" />

    <Button
        android:id="@+id/typeTwo"
        android:layout_marginStart="10dp"
        android:text="@string/_2"
        android:backgroundTint="#e64a19"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:layout_marginTop="380dp"
        android:textSize="25sp" />

    <Button
        android:id="@+id/typeThree"
        android:layout_marginStart="10dp"
        android:text="@string/_3"
        android:backgroundTint="#ff1744"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:layout_marginTop="440dp"
        android:textSize="25sp" />



</FrameLayout>
